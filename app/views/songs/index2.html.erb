<p id="notice"><%= notice %></p>

<h1>Listing Songs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Desc</th>
      <th>Soundcover</th>
      <th>Sound</th>
      <th>Date released</th>
      <th>Genre</th>
      <th>Lyrics</th>
      <th>Artist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.title %></td>
        <td><%= song.desc %></td>
        <td><%= song.soundcover %></td>
        <td><%= song.sound %></td>
        <td><%= song.date_released %></td>
        <td><%= song.genre %></td>
        <td><%= song.lyrics %></td>
        <td><%= song.artist %></td>
        <td><%= link_to 'Show', song %></td>
        <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

