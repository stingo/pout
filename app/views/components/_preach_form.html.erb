      <div class="col-sm-8 centered">
        <%= form_for(@newPreach) do |f| %>
        
              <div class="field" style="margin-left: 10px;">



              

                <ul class="nav nav-pills">
                               <li class="btn bg-grd-violet preachicon1" title="Text" data-toggle="modal" data-target="#preach"><i class="fa fa-commenting-o  fa-2x"></i> </li>

