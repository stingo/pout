              </div>
          
        <% end %>
      </div>
    </div>
  </div>
<% end %>


<!--Video Modal-->

<div class="modal fade zindez999" id="preach" tabindex="-1" role="dialog" aria-labelledby="modalBasicLabel" aria-hidden="true">
            <div class="modal-dialog zindez999">
              <div class="modal-content">
                <div class="modal-header">
                 <i class="fa fa-file-video-o fa-2x"></i>
                  <h4 class="modal-title" id="modalBasicLabel">Paste your full Youtube link below</h4>
                </div>
                <div class="modal-body">

                  <p>

                <%= form_for(@newPreach) do |f| %>

                <%= f.text_field :title, autofocus: true, :placeholder => 'Preach title', class: "form-control" %>
        
              
                <%= f.text_area :content, autofocus: true, placeholder: "What's inspirational?...", class: "form-control" %>

                <br />

                <div class="field">
                <%= f.label :add_image, class: "small" %><br>
                <%= f.file_field :preachcover %>
              </div>

                <span type="button" class="btn btn-submit" style="float: right; margin-top: 3px;"><%= f.submit "PreachOut", class: "btn btn-primary" %></span>
            
          
                <% end %>
    


                  </p>
                  <p></p>
                

                </div>
                  <p></p>
                    <p></p>
                <div class="modal-footer">
                 
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  
                </div>
              </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
          </div><!-- /.modal -->

