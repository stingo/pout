



<% if preacher_signed_in? %>



  <div class="panel panel-default post-form-panel">
    <div class="panel-body row">
      
      <div class="col-sm-1">
        <% if current_preacher.profilephoto? %>
            <%=link_to (image_tag current_preacher.profilephoto.url(:small), :class => " kit-avatar kit-avatar-32 no-border rounded-img thumb35 centered"), preacher_path(current_preacher.id) %>
            <% else %> 
            <%=link_to (image_tag("fallback/unknown-profile.jpg", :class => "kit-avatar kit-avatar-32 no-border rounded-img thumb35 centered")), preacher_path(current_preacher.id)%></a></li>

       <% end %> 
      </div>
      <div class="col-sm-11">
        <%= form_for(@newPreach) do |f| %>
        
              <div class="field" style="margin-left: 10px;">

              <div class="col-sm-10">
                <%= f.text_area :content, autofocus: true, placeholder: "What's inspirational?...", class: "form-control" %>
                </div>

                <div class="col-sm-2">
                <%= f.label :add_photo, :class => "form-control" %>
              <%= f.file_field :preachcover, :autofocus => true, :placeholder => 'Add image', :class => "form-control" %>              
                </div>

                <span type="button" class="btn btn-submit" style="float: right; margin-top: 3px;"><%= f.submit "PreachOut", class: "btn btn-primary" %></span>

                <ul class="nav nav-pills">
                                <li class="btn btn-success" data-toggle="modal" data-target="#myModal"><i class="fa fa-file-video-o fa-2x"></i> </li>
                                <li class="btn btn-success" data-toggle="modal" data-target="#audio"><i class="fa fa-music fa-2x"></i> </li>
                                <li><a href="#"><i class="fa fa-camera"></i></a></li>
                                <li><a href="#"><i class="fa fa-smile-o"></i></a></li>
              </ul><!-- /.nav nav-pills -->

             

              
              </div>
          
        <% end %>
      </div>
    </div>
  </div>
<% end %>


